<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ApplePayController">
    <children>
        <MenuBar layoutY="-2.0" prefWidth="600.0">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <Separator layoutX="-7.0" layoutY="36.0" prefHeight="95.0" prefWidth="600.0"/>
        <Label layoutX="156.0" layoutY="42.0" text="Thanks For Your Payment" textAlignment="CENTER">
            <font>
                <Font name="Apple SD Gothic Neo Bold" size="25.0"/>
            </font>
        </Label>
        <Button fx:id="view" layoutX="49.0" layoutY="335.0" mnemonicParsing="false" text="View Your Order"/>
        <Button fx:id="back" layoutX="242.0" layoutY="335.0" mnemonicParsing="false" text="Back To Main Page"/>
        <Button fx:id="QA" layoutX="462.0" layoutY="335.0" onAction="#handleQuestions" text="Q &amp; A"/>

        <Label layoutX="66.0" layoutY="122.0" text="apple id:"></Label>
        <Text fx:id="appleID" layoutX="135.0" layoutY="135.0" text="${controller.payment.appleID}"
              wrappingWidth="135.076171875"/>

        <TableView layoutX="340.0" layoutY="120" fx:id="items" items="${controller.lastOrder.items}"
                  prefWidth="400" prefHeight="200">
            <placeholder>
                <Label text="No results found." />
            </placeholder>
            <columns>
                <TableColumn fx:id="idClm" text="ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="id" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="nameClm" text="Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="costClm" text="Cost">
                    <cellValueFactory>
                        <PropertyValueFactory property="cost" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="desClm" text="Description">
                    <cellValueFactory>
                        <PropertyValueFactory property="description" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

    </children>
</Pane>
